{{#layout}}
    <!--navigation header-->
    <nav class="navbar navbar-expand-md navbar-light bg-light">
        <a class="navbar-brand" href="/">My Todo App</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo03"
                aria-controls="navbarTogglerDemo03" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarTogglerDemo03">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/">Home</a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="/notes">Notes <span class="sr-only">(current)</span></a>
                </li>
            </ul>
            {{^authenticated}}
                <div class="btn btn-group btn-group-sm p-0">
                    <a class="btn btn-sm btn-outline-primary" href="/login">Log in</a>
                    <a class="btn btn-sm btn-outline-secondary" href="/register">Register</a>
                </div>
            {{/authenticated}}
            {{#authenticated}}
                <span class="navbar-text pl-md-2 pr-2">
                    {{name}}
                </span>
                <a class="btn btn-sm btn-outline-primary" href="/logout">Log out</a>
            {{/authenticated}}
        </div>
    </nav>

    <div class="container">
        <h2>Edit note</h2>
        <div class="row justify-content-center">
            <div class="col-md-6">
                {{#note}}
                    {{>frags/form-update-note}}
                {{/note}}
            </div>
        </div>
    </div>
{{/layout}}
{{>layout}}